<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE"
              class="ch.qos.logback.core.FileAppender">
        <file>outputFile/log.log</file>
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} [%thread] [%-5level]  %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
